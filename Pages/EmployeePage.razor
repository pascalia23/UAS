@page "/employeepage"

<h3>Employee List</h3>

@if(Employees == null){
    <div class="spinner"></div>
}
else {
    <div class="card-deck">
        @foreach (var emp in Employees)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@emp.FirstName @emp.LastName</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="@emp.PhotoPath" />
                <div class="card-footer text-center">
                    <a href="@($"employeedetail/{emp.EmployeeId}")" class="btn btn-primary m-1">View</a>
                    <a href="@($"editemployee/{emp.EmployeeId}")" class="btn btn-warning m-1">Edit</a>
                    <a href="@($"deleteemployee/{emp.EmployeeId}")" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>
}