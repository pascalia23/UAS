@page "/addemployee"

<EditForm Model="@Employee" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <h3>Add Student</h3>
    <hr/>
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            NIM
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="NIM"
                @bind-Value="Employee.FirstName" />
            <ValidationMessage For="@(()=>Employee.FirstName)" />    
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Nama Belakang
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Nama Belakang"
                @bind-Value="Employee.LastName" />
                <ValidationMessage For="@(()=>Employee.LastName)" /> 
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Nama Depan
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder=" Nama Depan"
                @bind-Value="Employee.LastName" />
                <ValidationMessage For="@(()=>Employee.LastName)" /> 
        </div>
    </div>
   
     <div class="form-group row">
         <label for="dateofbirth" class="col-sm-2 col-form-label">Tanggal masuk</label>
         <div class="col-sm-10">
             <InputDate @bind-Value="Employee.DateOfBirth" class="form-control" />
         </div>
     </div>
     <button class="btn btn-primary" type="submit">Submit</button>
</EditForm>

